

<form action="<%= update_tasks_path(@task) %>" method="post">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="_method" value="patch" />
  <label for="name">name: </label>
  <input type="text" name="task[name]" id="name" value="<%= @task.name %>">

  <label for="content">content: </label>
  <input type="text" name="task[content]" id="content"   value="<%= @task.content %>">

  <input type="submit">
</form>

